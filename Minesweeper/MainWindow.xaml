<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Minesweeper by Pascal" Height="800" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <TextBlock x:Name="TimerTextBlock" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Margin="150,90,0,0" />
        <TextBlock x:Name="FlaggsPlacedTextBlock" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Margin="400,90,0,0" />

        <Canvas x:Name="GameBoard" HorizontalAlignment="Center" VerticalAlignment="Center"
            Width="500" Height="500">

        </Canvas>
    </Grid>
</Window>
